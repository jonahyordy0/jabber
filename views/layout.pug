block variables

mixin nav(selected)
  if selected === "home"
    li.primary-menu-item.selected
      a(href='/dashboard/home').primary-menu-link Home
  else
    li.primary-menu-item
      a(href='/dashboard/home').primary-menu-link Home
  
  if selected === "tasks"
    li.primary-menu-item.selected
      a(href='/dashboard/tasks').primary-menu-link My Tasks
  else
    li.primary-menu-item
      a(href='/dashboard/tasks').primary-menu-link My Tasks
  
  li.primary-menu-item
    a(href='/dashboard/dashboard').primary-menu-link Inbox

doctype html
html
  head
    meta(charset="utf-8")
    link(rel="shortcut icon", href="/favicon.ico")
    meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")
    meta(name="theme-color", content="#000000")
    title #{title} | PS
    link(rel="stylesheet" href="/style.css")
  body
    aside
      nav.ps-nav-menu
        ul.primary-menu
          img(src='/company-logo.jpg')
          block nav

    main
      div.main-header
        h3 #{title}
        div.top-nav
          input.form-input.top-nav-child(type='text', placeholder='Search...')
          button.new-project-button.top-nav-child(type="button")
            span.button-icon +
          a.profile-link.top-nav-child(href='/profile')
            img.profile-pic(src="/profile-picture.png")

      div.main-content
        block main-content